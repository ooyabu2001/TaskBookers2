<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h1>User info</h1>

     <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
   <%= form_with model: @user do |f| %>

      <label for ="inputName">Name</label>

      <div class="form-group">
      <%= f.text_field :name, autofocus: true,id:"inputName",placeholde:"名前"%>
      </div>

       <label for="inputImage">Image</label>

       <div class="form-group">
      <%= f.file_field :profile_image,placeholde:"プロフィール画像", accept:"image/*"%>
      </div>

      <label for="inputIntroduction">Introduction</label>

      <div class="form-group">
   <%= f.text_area :introduction, autofocus: true,id:"inputIntroduction",placeholde:"自己紹介" %>
      </div>

     <div class="form-group">
      <%= f.submit "Update User" ,class: "btn btn-secondary" %>
      </div>
   <% end %>
</div>